<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CTipsActivity"
    android:background="@color/orange1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:fontFamily="@font/sun_b"
        android:text="Tips/Etiquette"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/rv_tip"
        android:layout_width ="match_parent"
        android:layout_height = "match_parent"
        android:scrollbarSize = "5dp"
        android:scrollbarFadeDuration ="0"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars = "vertical"
        android:layout_weight = "1"
        ></androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btnWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/sun_b"
        android:background="@color/pink"
        android:text="Write"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom">


        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btnCommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sun_b"
            android:background="@color/yellow12"
            android:text="COMMUNITY" />
        <Button
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sun_b"
            android:background="@color/pink"
            android:text="HOME" />

        <Button
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btnMyPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sun_b"
            android:background="@color/pink"
            android:text="MYPAGE" />
    </LinearLayout>

</LinearLayout>