<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CRecommendActivity"
    android:background="@color/orange1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:fontFamily="@font/sun_b"
        android:textColor="@color/brown"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Good Place"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id = "@+id/rv_rec"
        android:layout_width ="match_parent"
        android:layout_height = "match_parent"
        android:scrollbarSize = "5dp"
        android:scrollbarFadeDuration ="0"
        android:scrollbarThumbVertical="@android:color/darker_gray"
        android:scrollbars = "vertical"
        android:layout_weight = "1"
        ></androidx.recyclerview.widget.RecyclerView>
    <Button
        android:id="@+id/btnWrite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="60dp"
        android:fontFamily="@font/sun_b"
        android:text="Write"
        android:textColor="@color/brown"
        android:background="@color/yellow12"></Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="bottom">


        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/btnCommunity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sun_b"
            android:text="COMMUNITY"
            android:textColor="@color/brown"
            android:background="@color/yellow12"/>
        <Button
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/btnHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/sun_b"
            android:text="HOME"
            android:textColor="@color/brown"
            android:background="@color/yellow12"/>
        <Button
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:id="@+id/btnMyPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sun_b"
            android:layout_weight="1"
            android:text="MYPAGE"
            android:textColor="@color/brown"
            android:background="@color/yellow12"/>
    </LinearLayout>

</LinearLayout>