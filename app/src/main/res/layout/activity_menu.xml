<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/ResPhoneNum"
        android:fontFamily="@font/sun_b"
        android:layout_width="339dp"
        android:layout_height="47dp"
        android:layout_marginBottom="16dp"
        android:text="Phone Number: "
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/MenuList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/ResAddress"
        android:fontFamily="@font/sun_b"
        android:layout_width="343dp"
        android:layout_height="79dp"
        android:text="Address: "
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/ResPhoneNum"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ResName" />

    <TextView
        android:id="@+id/ResName"
        android:fontFamily="@font/sun_b"
        android:layout_width="343dp"
        android:layout_height="57dp"
        android:text="Restaurant Name: "
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <ListView
        android:id="@+id/Menu"
        android:layout_width="356dp"
        android:layout_height="422dp"
        android:scrollbars="vertical"
        android:fontFamily="@font/sun_b"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.902" />

    <TextView
        android:id="@+id/MenuList"
        android:layout_width="82dp"
        android:layout_height="30dp"
        android:text="Menu List"
        android:fontFamily="@font/sun_b"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.931" />

    <ImageView
        android:id="@+id/addFavorite"
        android:layout_width="35dp"
        android:layout_height="39dp"
        app:layout_constraintBottom_toTopOf="@+id/Menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toEndOf="@+id/MenuList"
        app:layout_constraintTop_toBottomOf="@+id/ResPhoneNum"
        app:layout_constraintVertical_bias="0.666"
        app:srcCompat="@drawable/staricon_before" />

</androidx.constraintlayout.widget.ConstraintLayout>